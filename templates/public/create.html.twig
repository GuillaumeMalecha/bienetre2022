{% extends 'base.html.twig' %}

{% block body %}
    <div class="image-cover hero-banner" style="background:url(https://picsum.photos/1920/1000) no-repeat;" data-overlay="6">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <div class="loving-modern-login">
                        <h3>Inscrivez-vous comme client</h3>
                        <h4>et trouvez votre bien être</h4>
                        <div class="row main_login_form">
