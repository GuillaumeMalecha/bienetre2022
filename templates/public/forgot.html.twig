{% extends 'base.html.twig' %}

{% block body %}

    <!-- ============================ Login Start================================== -->
    <section class="gray">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <div class="loving-modern-login">

                        <h3>Oublié votre mot de passe ?</h3>
                        <p>Veuillez entrer votre adresse e-mail pour recevoir un lien de récupération de votre mot de passe</p>
                        <div class="row main_login_form">
                            <div class="login_form_dm">
                                <form id="edd_login_form" class="edd_form" method="post">
                                    <fieldset>
                                        <p class="edd-login-username">
                                            <input class="form-control" type="text" placeholder="E-mail">
                                        </p>

                                        <p class="edd-login-submit">
                                            <input type="submit" class="btn btn-theme full-width" value="Récupérer mon mot de passe">
                                        </p>

                                    </fieldset>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ============================ Login End ================================== -->

{% endblock %}